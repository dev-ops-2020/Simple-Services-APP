<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/min_margin"
    card_view:cardCornerRadius="@dimen/med_margin"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/big_icon"
            android:layout_height="@dimen/big_icon"
            android:layout_margin="@dimen/min_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewDefault"
                android:gravity="start"
                android:id="@+id/name"
                android:layout_marginHorizontal="@dimen/min_margin"/>

            <TextView
                style="@style/TextViewDefault"
                android:gravity="start"
                android:id="@+id/description"
                android:layout_marginHorizontal="@dimen/min_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/min_margin">


                <TextView
                    android:text="@string/price"
                    style="@style/TextViewDefault"
                    android:gravity="start"
                    android:layout_width="wrap_content"/>

                <TextView
                    style="@style/TextViewDefault"
                    android:gravity="start"
                    android:layout_width="wrap_content"
                    android:id="@+id/price"/>

                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/subtract"
                        android:layout_width="@dimen/min_icon_alt"
                        android:layout_height="@dimen/min_icon_alt"
                        android:src="@drawable/__subtract"/>

                    <TextView
                        android:id="@+id/qty"
                        style="@style/TextViewDefault"
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="@dimen/min_margin"/>

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="@dimen/min_icon_alt"
                        android:layout_height="@dimen/min_icon_alt"
                        android:src="@drawable/__add"/>
                </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
