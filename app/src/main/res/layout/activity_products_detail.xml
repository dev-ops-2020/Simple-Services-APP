<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <!--Header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/med_icon"
            android:layout_height="@dimen/med_icon"
            android:layout_margin="@dimen/min_margin"
            android:layout_centerVertical="true"/>

        <TextView
            style="@style/TextViewHeader"
            android:id="@+id/tittle"
            android:layout_toStartOf="@id/filter"
            android:layout_toEndOf="@id/logo"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/filter"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/med_icon"
            android:layout_height="@dimen/med_icon"
            android:layout_margin="@dimen/min_margin"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/_menu"/>
    </RelativeLayout>
    <!--Main-->
    <LinearLayout
        android:id="@+id/main"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/min_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            android:background="@color/colorPrimary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_list_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <TextView
            style="@style/TextViewDefault"
            android:id="@+id/name"/>

        <View
            style="@style/ViewLine"/>

        <LinearLayout
            android:id="@+id/product_viewgroup_sizes_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" />

        <View
            style="@style/ViewLine"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/min_margin"
            android:layout_marginHorizontal="@dimen/med_margin"
            android:orientation="horizontal">

            <com.ops.dev.simple.services.widget.CustomNumberPicker
                android:id="@+id/product_picker_item_count"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                app:min="1"
                app:max="10"
                app:value="1"/>

            <TextView
                style="@style/TextViewHeader"
                android:id="@+id/product_text_price"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/med_margin"
                android:text="@string/total_dollar"/>
        </LinearLayout>

        <Button
            android:id="@+id/add_to_cart"
            style="@style/ButtonDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="@string/add_to_cart"/>
    </LinearLayout>
</RelativeLayout>