<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <!--Header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/med_icon"
            android:layout_height="@dimen/med_icon"
            android:layout_margin="@dimen/min_margin"
            android:layout_centerVertical="true"/>

        <TextView
            style="@style/TextViewHeader"
            android:id="@+id/tittle"
            android:layout_toStartOf="@id/filter"
            android:layout_toEndOf="@id/logo"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/filter"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/med_icon"
            android:layout_height="@dimen/med_icon"
            android:layout_margin="@dimen/min_margin"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/_menu"/>
    </RelativeLayout>
    <!--Main-->
    <LinearLayout
        android:id="@+id/main"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/min_margin"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Pictures-->
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pictures"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height_big"
                    android:background="@color/colorPrimaryDark"/>
                <!--Description-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewDefault"
                        android:text="@string/description"/>

                    <TextView
                        style="@style/TextViewDefault"
                        android:id="@+id/description"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <!--Categories-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewDefault"
                        android:text="CategorÃ­as:"/>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCategories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/min_margin"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
                <!--Picker-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/med_margin"
                    android:background="@drawable/border_menu">

                    <com.ops.dev.simple.services.widget.CustomNumberPicker
                        android:id="@+id/picker"
                        android:layout_width="@dimen/main_margin_top"
                        android:layout_height="@dimen/main_margin_bottom"
                        android:layout_gravity="center"
                        app:min="1"
                        app:max="20"
                        app:value="1"/>

                    <TextView
                        style="@style/TextViewHeader"
                        android:text="@string/price"
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/med_margin"/>

                    <TextView
                        style="@style/TextViewHeader"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/med_margin"/>
                </LinearLayout>
                <!--Add button-->
                <Button
                    style="@style/ButtonDefault"
                    android:id="@+id/add_to_cart"
                    android:text="@string/add_to_cart"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>