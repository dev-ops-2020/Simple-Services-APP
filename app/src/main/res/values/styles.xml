<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextViewDefault</item>
        <item name="android:editTextStyle">@style/EditTextDefault</item>
        <item name="android:button">@style/ButtonDefault</item>
    </style>

    <style name="TextViewDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextInputLayout" parent="TextViewDefault">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/min_divider</item>
        <item name="android:layout_margin">@dimen/min_divider</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TextViewHeader" parent="TextViewDefault">
        <item name="android:textSize">@dimen/big_font_alt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewSubHeader" parent="TextViewHeader">
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewCategories" parent="TextViewDefault">
        <item name="android:textSize">@dimen/min_font_alt</item>
    </style>

    <style name="EditTextDefault">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white_alt</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/black_alt</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:background">@drawable/border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/med_margin</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>