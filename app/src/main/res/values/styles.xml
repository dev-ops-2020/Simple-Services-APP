<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:button">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
    </style>

    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/min_divider</item>
        <item name="android:layout_margin">@dimen/min_divider</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/min_margin</item>
        <item name="android:layout_marginEnd">@dimen/min_margin</item>
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewCategories" parent="TextInputLayout">
        <item name="android:textSize">@dimen/min_font</item>
    </style>

    <style name="TextViewHeader" parent="TextInputLayout">
        <item name="android:textSize">@dimen/big_font_alt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewSubHeader" parent="TextViewHeader">
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EditText">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/border_buttons_enable</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/med_margin</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/med_margin</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/min_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/med_margin</item>
        <item name="android:textSize">@dimen/med_font</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!--
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        -->
        <item name="android:background">@drawable/border_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">100%</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>
</resources>